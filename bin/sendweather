outstring =  "Currently " + result["condition"]["temp"] + " F, " + result["condition"]["text"] + "\nHigh " + result["forecasts"][0]["high"] + " F, Low " + result["forecasts"][0]["low"] + "\nForecast: " + result["forecasts"][0]["text"]  
server = smtplib.SMTP("smtp.gmail.com", 587)
